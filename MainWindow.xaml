<Window x:Class="pract7_trpo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pract7_trpo"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0">
            <Label Content="Имя"/>
            <Label Content="Фамилия"/>
            <Label Content="Отчество"/>
            <Label Content="Специализация"/>
            <Label Content="Пароль"/>
            <Label Content="Подтвердите пароль"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="0" x:Name="RegForm">
            <TextBox Margin="3.5" Text="{Binding Name}"/>
            <TextBox Margin="3.5" Text="{Binding LastName}"/>
            <TextBox Margin="3.5" Text="{Binding MiddleName}"/>
            <TextBox Margin="3.5" Text="{Binding Specialization}"/>
            <TextBox Margin="3.5" Text="{Binding Password}"/>
            <TextBox Margin="3.5" Text="{Binding RepeatPassword}"/>
            <Button
            Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"
            Name="Register" 
            Width="150" Height="25"
            VerticalAlignment="Bottom"
            Margin="5" Content="Зарегистрироваться" 
            Click="Register_Click"
            />
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="0">
            <Label Content="ID"/>
            <Label Content="Пароль"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1" x:Name="LoginForm">
            <TextBox Text="{Binding ID, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
            <TextBox Margin="5" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
            Name="Login"
            Height="25" Width="150"
            VerticalAlignment="Bottom"
            Margin="5" Content="Войти" Click="Login_Click"/>
        </StackPanel>
        <DockPanel Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="2" Background="LightGray" Margin="5">
            <StackPanel DockPanel.Dock="Left">
                <Label Content="Имя:"/>
                <Label Content="Фамилия:"/>
                <Label Content="Отчество:"/>
                <Label Content="Специализация:"/>
            </StackPanel>
            <StackPanel DockPanel.Dock="Right" x:Name="InfoForm">
                <Label Content="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                <Label Content="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>
                <Label Content="{Binding MiddleName, UpdateSourceTrigger=PropertyChanged}"/>
                <Label Content="{Binding Specialization, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
