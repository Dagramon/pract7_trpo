<Window x:Class="pract7_trpo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pract7_trpo"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0">
            <Label Content="Имя"/>
            <Label Content="Фамилия"/>
            <Label Content="Отчество"/>
            <Label Content="Специализация"/>
            <Label Content="Пароль"/>
            <Label Content="Подтвердите пароль"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="0">
            <TextBox Margin="3.5" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Margin="3.5" Text="{Binding Surname, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Margin="3.5" Text="{Binding Middlename, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Margin="3.5" Text="{Binding Specialization, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Margin="3.5" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Margin="3.5" Name="RepeatPass"/>
        </StackPanel>
        <Button
                Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"
                Name="Register" 
                Width="150" Height="25"
                VerticalAlignment="Bottom"
                Margin="5" Content="Зарегистрироваться" 
                Click="Register_Click"
                />
        <StackPanel Grid.Row="1" Grid.Column="0">
            <Label Content="Имя"/>
            <Label Content="Фамилия"/>
            <Label Content="Пароль"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <TextBox Margin="5" Text="{Binding Name}"></TextBox>
            <TextBox Margin="5" Text="{Binding Surname}"></TextBox>
            <TextBox Margin="5" Text="{Binding Password}"></TextBox>
        </StackPanel>
        <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                Name="Login"
                Height="25" Width="150"
                VerticalAlignment="Bottom"
                Margin="5" Content="Войти" Click="Login_Click"/>
    </Grid>
</Window>
